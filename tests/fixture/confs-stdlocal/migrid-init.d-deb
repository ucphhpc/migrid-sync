    SHORT_NAME=$(basename ${DAEMON_PATH})
    PID_FILE="$PID_DIR/${SHORT_NAME}.pid"
    log_daemon_msg "Reloading MiG server" ${SHORT_NAME} || true
    if start-stop-daemon --stop --signal HUP --quiet --oknodo --pidfile ${PID_FILE} ; then
	log_end_msg 0 || true
