}
status_sftpsubsys_workers() {
    DAEMON_PATH=${MIG_SFTPSUBSYS_WORKER}
    SHORT_NAME=$(basename ${DAEMON_PATH})
    pgrep -f ${DAEMON_PATH} > /dev/null
}
status_sftpsubsys() {
    check_enabled "sftp_subsys" || return 0
    DAEMON_PATH=${MIG_SFTPSUBSYS}
    SHORT_NAME=$(basename ${DAEMON_PATH})
    pgrep -f "${DAEMON_PATH} -f ${MIG_SFTPSUBSYS_CONF}" > /dev/null
    status_sftpsubsys_workers
}

status_all() {
    status_script
    status_monitor
    status_sshmux
    status_events
    status_cron
    status_transfers
    status_openid
    status_sftp
    status_sftpsubsys
    # Use wsgidav implementation instead of outdated PyWebDav one
    status_webdavs
    #status_davs
    status_ftps
    status_notify
    status_imnotify
    status_vmproxy
    return 0
}


### Main ###

# Exit cleanly if main daemon is missing
test -f ${MIG_SCRIPT} || exit 0

# Force valid target
case "$2" in
    script|monitor|sshmux|events|cron|transfers|openid|sftp|sftpsubsys|webdavs|davs|ftps|notify|imnotify|vmproxy|all)
        TARGET="$2"
	;;
    '')
        TARGET="all"
	;;
    *)
	show_usage
	exit 1
	;;
esac

case "$1" in
    start)
        eval "start_$TARGET"
	;;
    stop)
        eval "stop_$TARGET"
	;;
    status)
        eval "status_$TARGET" && exit 0 || exit $?
	;;
    restart)
        eval "stop_$TARGET"
        eval "start_$TARGET"
	;;
    reload)
        eval "reload_$TARGET"
	;;
    # NOTE: we need custom targets for single daemon actions (systemd issue?)
    startdaemon)
        eval "start_$TARGET"
	;;
    stopdaemon)
        eval "stop_$TARGET"
	;;
    statusdaemon)
        eval "status_$TARGET"
	;;
    restartdaemon)
        eval "stop_$TARGET"
        eval "start_$TARGET"
	;;
    reloaddaemon)
        eval "reload_$TARGET"
	;;
    *)
	show_usage
	exit 1
	;;
esac
exit $?
